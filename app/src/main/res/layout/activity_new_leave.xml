<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Home.Fragments.Leaves.NewLeaveActivity">

    <com.skydoves.elasticviews.ElasticImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/pulse_color"
        android:padding="10dp"
        android:src="@drawable/back_image_tint"
        app:imageView_duration="200"
        app:imageView_scale="0.93" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_medium"
                android:text="Leaves Create"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu"
                android:text="Title *"
                android:textColor="@color/black_light"
                android:textSize="15.5dp" />

            <EditText
                android:id="@+id/leaveTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/ubuntu_medium"
                android:hint="Title"
                android:inputType="textCapSentences"
                android:lines="2"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_dark"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="Leave Type *"
                android:textColor="@color/black_light"
                android:textSize="15.5dp" />

            <Spinner
                android:id="@+id/leaveType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_bg"
                android:entries="@array/spinner_options"
                android:prompt="@string/select_option" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="Leave From *"
                android:textColor="@color/black_light"
                android:textSize="15.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LeaveFrom"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg"
                    android:drawableRight="@drawable/baseline_calendar_month_24"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="center_vertical"
                    android:hint="mm/dd/yyyy"
                    android:inputType="textCapSentences"
                    android:lines="2"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_dark"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fromTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_bg"
                    android:drawableRight="@drawable/baseline_access_time_24"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="center_vertical"
                    android:hint="--:-- --"
                    android:inputType="textCapSentences"
                    android:lines="2"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_dark"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="Leave To *"
                android:textColor="@color/black_light"
                android:textSize="15.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LeaveTo"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg"
                    android:drawableRight="@drawable/baseline_calendar_month_24"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="center_vertical"
                    android:hint="mm/dd/yyyy"
                    android:inputType="textCapSentences"
                    android:lines="2"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_dark"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/toTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_bg"
                    android:drawableRight="@drawable/baseline_access_time_24"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="center_vertical"
                    android:hint="--:-- --"
                    android:inputType="textCapSentences"
                    android:lines="2"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_dark"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="Leave days *"
                android:textColor="@color/black_light"
                android:textSize="15.5dp" />

            <TextView
                android:id="@+id/LeaveDay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="center_vertical"
                android:hint="0"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_dark"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="Notify to (other than admin, hr_manager)"
                android:textColor="@color/black_light"
                android:textSize="15.5dp" />

            <Spinner
                android:id="@+id/notifyToSpinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_bg" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/allEmails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu"
                android:text="Write Your Content: *"
                android:textColor="@color/black_light"
                android:textSize="15.5dp" />

            <EditText
                android:id="@+id/WriteYourContent"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/ubuntu_medium"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_dark"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu"
                android:text="Add Attachments"
                android:textColor="@color/black_light"
                android:textSize="15.5dp" />

            <LinearLayout
                android:id="@+id/chooseFiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@color/pulse_color"
                    android:backgroundTint="@color/pulse_color"
                    android:padding="10dp"
                    android:text="Choose Files"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/filesCount"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="center_vertical"
                    android:hint="No file chosen"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_dark"
                    android:textSize="15dp" />

            </LinearLayout>

            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/submitLeave"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rect_bg_small"
                android:backgroundTint="@color/pulse_color"
                android:padding="10dp"
                android:text="Submit"
                android:textColor="@color/white"
                app:button_duration="200"
                app:button_scale="0.93" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>