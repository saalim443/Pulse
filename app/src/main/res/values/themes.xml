<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pulse" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pulse_color</item>
        <item name="colorPrimaryDark">@color/pulse_color</item>
        <item name="colorAccent">@color/pulse_color</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="Theme.Pulse" parent="Base.Theme.Pulse" />
    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="circularFAB">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:dropDownVerticalOffset">15dip</item>
        <item name="overlapAnchor">false</item>
    </style>
</resources>